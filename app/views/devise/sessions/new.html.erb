<div class="login-box">
  <h2>Login</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "senha" %>
    </div>

    <div class="actions">
      <%= f.submit "Entrar", class: "btn btn-login" %>
    </div>
  <% end %>

  <div class="signup-link">
    <p>NÃ£o tem uma conta? <%= link_to "Criar conta", new_registration_path(resource_name), class: "btn btn-signup" %></p>
  </div>
</div>
